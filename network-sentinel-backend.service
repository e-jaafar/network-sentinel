[Unit]
Description=Network Sentinel Backend (FastAPI)
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=Jaafar
Group=Jaafar
WorkingDirectory=/home/Jaafar/Desktop/network-sentinel
Environment="PATH=/home/Jaafar/Desktop/network-sentinel/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/Jaafar/Desktop/network-sentinel/venv/bin/uvicorn backend.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
