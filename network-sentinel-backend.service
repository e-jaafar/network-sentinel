[Unit]
Description=Network Sentinel Backend (FastAPI)
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
# Change USER to your username
User=USER
Group=USER
# Change PATH to your installation directory
WorkingDirectory=/home/USER/network-sentinel
Environment="PATH=/home/USER/network-sentinel/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/USER/network-sentinel/venv/bin/uvicorn backend.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
